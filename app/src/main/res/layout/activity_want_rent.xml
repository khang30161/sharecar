<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yellow"
    tools:context=".WantRentActivity">

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/xe_cho_thue"
        android:layout_width="match_parent"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CẦN CHO THUÊ XE MÁY"/>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/line1"
        android:layout_below="@+id/xe_cho_thue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_focused">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textColor="@color/cardview_light_background"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:textColor="@color/cardview_light_background"
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locate"/>

        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner">
        </Spinner>

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@+id/line1"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startday"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textColor="@color/cardview_light_background"
                android:text="Start Day:"
                android:layout_marginVertical="10dp"/>
            <Button

                android:id="@+id/datePickerDialogButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Ngày đi"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/endday"
                android:layout_marginLeft="10dp"
                android:layout_width="200dp"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:text="End Date:" />
            <Button
                android:id="@+id/endDatePickerDialogButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Ngày kết thúc"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:background="@color/common_google_signin_btn_text_dark_focused">

        <EditText
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập vào giá bạn muốn!"
            android:id="@+id/price"/>
        <TextView
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="đồng"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_add_pic"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:textColor="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm ảnh sản phẩm của bạn"/>
        <ImageView
            android:layout_marginHorizontal="15dp"
            android:id="@+id/add_pic_rent"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>
    <Button
        android:layout_below="@+id/line5"
        android:textColorHint="@color/cardview_light_background"
        android:id="@+id/want_rent_finish_button"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Finish"/>
    <TextView
        android:id="@+id/tv_intro"
        android:layout_below="@+id/want_rent_finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới thiệu về xe của bạn:"
        android:layout_marginTop="15dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
        android:layout_below="@id/tv_intro"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_intro"
        android:hint="Nhập vào đây...."/>
</RelativeLayout>