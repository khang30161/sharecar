<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ShareCarDriverSumary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow">

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nhập vào thời gian"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Ngày bắt đầu" />

            <TextView
                android:id="@+id/tv_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="yyyy/mm/dd"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_starttimee"
                    style="@style/CardView.Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Thời gian bắt đầu" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/tv_starttimehour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:hint="..."
                        android:textColor="@color/cardview_light_background"
                        android:textColorHint="@color/cardview_light_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ"
                        android:textColor="@color/cardview_light_background" />

                    <EditText
                        android:id="@+id/tv_starttimeminute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="...."
                        android:textColor="@color/cardview_light_background"
                        android:textColorHint="@color/cardview_light_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phút"
                        android:textColor="@color/cardview_light_background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_endtime"
                    style="@style/CardView.Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian kết thúc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ev_endtimehour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:hint="..."
                        android:textColor="@color/cardview_light_background"
                        android:textColorHint="@color/cardview_light_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ"
                        android:textColor="@color/cardview_light_background" />

                    <EditText
                        android:id="@+id/ev_endtimemi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:hint="..."
                        android:textColor="@color/cardview_light_background"
                        android:textColorHint="@color/cardview_light_background" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phút"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nhập vào địa điểm"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <LinearLayout
            android:id="@+id/line46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Địa điểm bắt đầu"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"/>
                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/spinner_war"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"/>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line46"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Địa điểm kết thúc:"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_share1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"/>
                <Spinner
                    android:id="@+id/spinner_district1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/spinner_war1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"/>



            </LinearLayout>


            <FrameLayout

                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/line62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                </LinearLayout>

            <LinearLayout
                android:id="@+id/line63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line62"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nhập vào loại xe"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <RelativeLayout
            android:id="@+id/line7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/line10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Số chỗ ngồi:"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <RadioGroup
                android:id="@+id/line11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line10"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cho34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="4 CHỖ"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="80dp"
                    android:text="6 CHỖ"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            </RadioGroup>

            <LinearLayout

                android:id="@+id/line12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line15"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stylecar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:text="Loại xe"
                    android:textColor="@color/cardview_light_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dongxe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/cardview_light_background"
                        android:hint="Dòng xe..........."
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line11"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ford"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ford" />


                <ImageView
                    android:id="@+id/merce"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="2dp"
                    android:src="@drawable/mercedes" />

                <ImageView
                    android:id="@+id/toyota"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_toyota" />

                <ImageView
                    android:id="@+id/vinf"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:src="@drawable/vifast" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line14"
                android:layout_marginLeft="7dp">

                <ImageView
                    android:id="@+id/bwm"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/bmw_logo" />

                <ImageView
                    android:id="@+id/honda"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/honda" />

                <ImageView
                    android:id="@+id/lambo"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/lambogini" />

                <ImageView
                    android:id="@+id/kia"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/kia" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nhập vào số ghế"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <RelativeLayout
            android:id="@+id/line9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line8">

            <LinearLayout
                android:id="@+id/line21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số vị trí trống:"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-3 chỗ"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                    <RadioButton
                        android:id="@+id/rb_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="4-5 chỗ"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line21"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú: "
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <EditText
                    android:id="@+id/et_note_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nói gì đó....."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />


            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/line30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line9"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Hình ảnh"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line30">

            <LinearLayout
                android:id="@+id/line32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line0"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Chú ý:"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:text="***Nên sử dụng hình ảnh thực tế."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:text="***Sử dụng ảnh chụp không quá 1 tháng."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line32"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_add_photo_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:text="THÊM ẢNH:"
                    android:textColor="@color/cardview_light_background" />

                <ImageView
                    android:id="@+id/imv_photo_share"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/line34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line43"
                android:gravity="center"
                android:text="Giá tiền"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <LinearLayout
                android:id="@+id/line35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line34"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_setmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**Giá tiền / Person"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <EditText
                    android:id="@+id/priceshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:hint="price"
                    android:textColor="@color/cardview_light_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đồng"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </LinearLayout>

            <TextView
                android:id="@+id/line50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line35"
                android:text="***Nếu chấp nhận hãy xem lại và gửi cho chúng tôi"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <Button
                android:id="@+id/finish123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line50"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                android:text="Hoàn thành"
                android:textColor="@color/cardview_light_background" />

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>