<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/yellow"
    tools:context=".SelectItem">

    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <TextView
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="THÔNG TIN SẢN PHẨM"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Địa Điểm:"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView
                android:id="@+id/location"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                android:hint="địa điểm"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Giá tiền:"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView
                android:id="@+id/price"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                android:hint="Giá sản phẩm"
                android:textColor="@color/cardview_light_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Ngày bắt đầu:"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/startday"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:hint="ngày bắt đầu"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:text="Ngày kết thúc:"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <TextView
                    android:id="@+id/endday"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:hint="ngày kết thúc"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/namee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="ngày đăng" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:id="@+id/line4_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/line3"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4_iv"
            android:layout_marginTop="20dp"
            android:text="NOTE:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:background="@color/cardview_light_background"
            android:hint="Ghi chú của chủ xe"
            android:verticalScrollbarPosition="right" />

        <TextView
            android:id="@+id/line6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_note"
            android:layout_marginTop="20dp"
            android:text="Giới thiệu về xe"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_light_background"
            android:hint="Hãng xe..."
            android:verticalScrollbarPosition="right" />

        <Button
            android:layout_marginBottom="50dp"
            android:id="@+id/btn_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_intro"
            android:layout_marginTop="20dp"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:text="Select"
            android:textColor="@color/cardview_light_background" />

    </RelativeLayout>
</ScrollView>